{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": true
        }
      }
    ]
  ],
  "plugins": [
    [
      "module-resolver", {
        "root": ["./src"],
        "alias": {
          "@root": "./",
          "@app": "./src/app",
          "@tests": "./src/tests"
        }
      }
    ]
  ]
}
